<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/default_small"
    android:paddingRight="@dimen/default_small"
    android:paddingTop="@dimen/default_small"
    android:paddingBottom="@dimen/default_micro"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/list_item_recently_img"
        android:layout_width="@dimen/default_large"
        android:layout_height="@dimen/default_large"
        android:layout_marginRight="@dimen/default_smaller"
        style="@style/Widget.Text.Description"
        android:background="@color/colorForeground"
        tools:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/list_item_recently_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/default_small"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginRight="@dimen/default_smaller"
        style="@style/Widget.Text.Description"
        tools:text="Name of group"/>
</LinearLayout>