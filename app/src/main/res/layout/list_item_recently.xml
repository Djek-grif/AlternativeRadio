<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/default_small"
    android:paddingRight="@dimen/default_small"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/list_item_recently_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/default_smaller"
        style="@style/Widget.Text.Micro"
        tools:text="12.35"/>
    <TextView
        android:id="@+id/list_item_recently_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxEms="15"
        android:layout_marginRight="@dimen/default_smaller"
        style="@style/Widget.Text.Micro"
        tools:text="Name of group"/>
    <TextView
        android:id="@+id/list_item_recently_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/default_smaller"
        style="@style/Widget.Text.Micro"
        tools:text="Track name"/>
</LinearLayout>